# Overmind Environment Configuration
# These variables are available to all processes started by Overmind

# Project Configuration
PROJECT_ROOT=/Users/erik/Desktop/claude-multiagent-system
PYTHONPATH=/Users/erik/Desktop/claude-multiagent-system

# TMUX Configuration
TMUX_BIN=/opt/homebrew/bin/tmux
OVERMIND_TMUX_CONFIG=default

# Process Configuration
OVERMIND_PORT=5000
OVERMIND_NETWORK=unix
OVERMIND_SOCKET=./.overmind.sock

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Claude Agent Configuration
CLAUDE_HOME=/Users/erik/.claude
CLAUDE_CONFIG_DIR=/Users/erik/.claude/config

# Logging
LOG_LEVEL=INFO
LOG_DIR=/Users/erik/Desktop/claude-multiagent-system/logs

# Feature Flags
FEATURE_DRAMATIQ=true
FEATURE_OVERMIND=true
FEATURE_AUTH=true
FEATURE_INBOX=true
FEATURE_DYNAMIC_AGENTS=true

# Development Settings
DEBUG=false
TEST_MODE=false
MOCK_CLAUDE=false

# Port Base for Dynamic Allocation
PORT_BASE=8500
PORT_STEP=1

# Process Colors (optional - makes output prettier)
OVERMIND_COLORS=1
OVERMIND_PROCFILE=Procfile.tmux

# Timeout Settings
OVERMIND_TIMEOUT=10
OVERMIND_FORMATION_TIMEOUT=30

# Auto-restart failed processes
OVERMIND_AUTO_RESTART=false

# Notes:
# - These variables are inherited by all processes
# - Override with: OVERMIND_ENV=custom.env overmind start
# - Check with: overmind echo
# - Update PROJECT_ROOT if you move the project